<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/icCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tag_food_card_height"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/tagFoodImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:text="name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/tag_card_name_font_size"
        app:layout_constraintEnd_toEndOf="@id/icCardView"
        app:layout_constraintStart_toStartOf="@id/icCardView"
        app:layout_constraintTop_toBottomOf="@id/icCardView" />

</androidx.constraintlayout.widget.ConstraintLayout>